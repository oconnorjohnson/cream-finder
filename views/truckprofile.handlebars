<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{user.firstName}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>ADD A NEW ROUTE</h3>
    <h6>To add a stop, write the stop's name, it's address, ETA: and the respective estimated time of arrival.</h6>
    <h6>EX: UC Davis, 1 Shields Ave, Davis CA, 95616, ETA: 12:00PM</h6>

    <form class="form new-route-form">
      <div class="form-group">
        <label for="route-name">ROUTE NAME</label>
        <input class="form-input" type="text" id="route-name" name="route-name" />
      </div>
      <div class="form-group">
        <label for="">FIRST STOP</label>
        <textarea class="form-input" id="first-stop" name="first-stop"></textarea>
      </div>
      <div class="form-group">
        <label for="">SECOND STOP</label>
        <textarea class="form-input" id="second-stop" name="second-stop"></textarea>
      </div>
      <div class="form-group">
        <label for="">THIRD STOP</label>
        <textarea class="form-input" id="third-stop" name="third-stop"></textarea>
      </div>
      <div class="form-group">
        <label for="">FOURTH STOP</label>
        <textarea class="form-input" id="fourth-stop" name="fourth-stop"></textarea>
      </div>
       <div class="form-group">
        <label for="">FIFTH STOP</label>
        <textarea class="form-input" id="fifth-stop" name="fifth-stop"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">ADD ROUTE</button>
      </div>
    </form>
  </div>

  <div class="col-md-6 stop-list">
    <h3>Your Stops:</h3>

    {{#each user.Routes as |route|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4>{{route.routeid}}</h4>
      </div>
      <div class="col-md-4">
        <span>{{route.address}}</span>
        <button class="btn btn-sm btn-danger" data-id="{{route.route_id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>

</div>

<script src="./js/profile.js"></script>
